<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.health.S2">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView14"
            style="@style/titleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button2" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI"
            style="@style/introTitle"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textMultiLine"
            style="@style/introCon"
            android:text="BMI (Body Mass Index/身體質量指數)= 體重 (kg) / 身高 (m2)。"/>

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="標準體重與合理的體重範圍"
            style="@style/introTitle"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="textMultiLine"
            style="@style/introCon"
            android:text="男性： （身高cm－80）×70﹪＝標準體重，女性： （身高cm－70）×60﹪＝標準體重"/>

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="腰臀比"
            style="@style/introTitle"/>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:ems="10"
            android:inputType="textMultiLine"
            style="@style/introCon"
            android:text="腰圍與臀圍比值是人體脂肪分佈的指標，過多脂肪積聚於腰間與患有慢性疾病(如: 心臟病、糖尿病等)有關。"
            android:layout_weight="0.36" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="體脂率"
            style="@style/introTitle"/>

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textMultiLine"
            style="@style/introCon"
            android:text="身體脂肪百分比= (身體脂肪總重量÷ 體重) x 100%"/>

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FFMI"
            style="@style/introTitle"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="textMultiLine"
            style="@style/introCon"
            android:text="ffmi(Fat Free Mass Index/無脂肪質量指數)=[體重*(100%-體脂率)]/身高(m)的平方"
            android:layout_weight="0.22" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMR及TEDD"
            style="@style/introTitle"/>

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:ems="10"
            android:inputType="textMultiLine"
            style="@style/introCon"
            android:text="BMR：基礎代謝率，TDEE(Total Daily Energy Expenditure/每天總消耗的能量)=BMR*活動程度"
            android:layout_weight="0.39" />

        <Button
            android:id="@+id/home7"
            style="@style/buttonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="home7"
            android:text="開始診斷" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
